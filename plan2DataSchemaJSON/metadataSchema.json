{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Structured Drawing Metadata Schema",
  "type": "object",
  "properties": {
    "projectInfo": {
      "type": "object",
      "properties": {
        "projectId": { "type": "string" },
        "projectName": { "type": "string" },
        "location": { "type": "string" },
        "author": { "type": "string" },
        "stakeholders": {
          "type": "object",
          "properties": {
            "client": { "type": "string" },
            "architect": { "type": "string" },
            "engineers": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },

    
        "timeline": {
          "type": "object",
          "properties": {
            "yearOfCompletion": { "type": "string", "format": "date" },
            "approvalDate": { "type": "string", "format": "date" }
          }
        }
      }
    },
    "planMetadata": {
      "type": "object",
      "properties": {
        "planType": { "type": "string" },
        "planFormat": { "type": "string" },
        "scale": { "type": "string" },
        "projectionMethod": { "type": "string" }
      }
    },
    "graphicalElements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "elementType": {
            "type": "string",
            "enum": ["wall", "window", "door", "room", "annotation", "dimensionLine"]
          },
          "geometry": {
            "type": "object",
            "properties": {
              "start": {
                "type": "array",
                "items": { "type": "number" },
                "minItems": 2,
                "maxItems": 2
              },
              "end": {
                "type": "array",
                "items": { "type": "number" },
                "minItems": 2,
                "maxItems": 2
              },
              "width": { "type": "number" },
              "height": { "type": "number" }
            }
          },
          "attributes": {
            "type": "object",
            "properties": {
              "material": { "type": "string" },
              "area": { "type": "number" },
              "function": { "type": "string" }
            }
          }
        },
        "required": ["elementType"]
      }
    },
    "billOfMaterials": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "partNumber": { "type": "string" },
          "description": { "type": "string" },
          "quantity": { "type": "integer" },
          "unit": { "type": "string" },
          "material": { "type": "string" },
          "supplier": { "type": "string" },
          "unitPrice": { "type": "number" },
          "totalPrice": { "type": "number" }
        }
      }
    }
  },
                            "stamps": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "organization_name": {
                                            "type": "string"
                                        }
                                    },
                                    "required": ["organization_name"]
                                }
                            }
}