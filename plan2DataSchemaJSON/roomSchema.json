{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Floor Plan Rooms",
  "type": "object",
  "properties": {
    "scale": {
      "type": "string",
      "description": "Scale of the drawing, e.g., 1:100"
    },
    "rooms": {
      "type": "array",
      "description": "List of rooms detected in the plan",
      "items": {
        "type": "object",
        "properties": {
          "roomName": {
            "type": "string",
            "description": "Name of the room (e.g. Kitchen, Bedroom)"
          },
          "boundingBox": {
            "type": "object",
            "description": "Bounding box coordinates and size in mm or px",
            "properties": {
              "origin": {
                "type": "object",
                "properties": {
                  "x": { "type": "number" },
                  "y": { "type": "number" }
                },
                "required": ["x", "y"]
              },
              "width": {
                "type": "number",
                "description": "Width of the room"
              },
              "height": {
                "type": "number",
                "description": "Height of the room"
              }
            },
            "required": ["origin", "width", "height"]
          },
          "adjacentRooms": {
            "type": "array",
            "description": "Names of rooms that are directly connected",
            "items": { "type": "string" }
          },
          "roomFunction": {
            "type": "string",
            "description": "Optional function label (e.g., storage, circulation)"
          },
          "floorLevel": {
            "type": "string",
            "description": "Floor number or name (e.g., 'Ground', '1st')"
          }
        },
        "required": ["roomName", "boundingBox"]
      }
    }
  },
  "required": ["scale", "rooms"]
}
